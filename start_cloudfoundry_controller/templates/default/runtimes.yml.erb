<% if node[:searched_data][:runtimes].include? "java" %>
java:
  description: "Java 6"
  version: "1.6"
  executable: /usr/lib/jvm/java-6-openjdk/jre/bin/java
  version_flag: '-version'
  version_output: 1.6.0
  debug_modes:
    - run
    - suspend
  debug_env:
    run:
      - JAVA_OPTS="$JAVA_OPTS -Xdebug -Xrunjdwp:transport=dt_socket,address=$VCAP_DEBUG_PORT,server=y,suspend=n"
    suspend:
      - JAVA_OPTS="$JAVA_OPTS -Xdebug -Xrunjdwp:transport=dt_socket,address=$VCAP_DEBUG_PORT,server=y,suspend=y"
  environment:
    PATH: /usr/lib/jvm/java-6-openjdk/jre/bin:$PATH
    JAVA_HOME: /usr/lib/jvm/java-6-openjdk/jre
<% end %>
